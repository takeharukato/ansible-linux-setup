#  Cilium共通CA Secret manifest (generated by Ansible)
#
# last update: {{ '%Y-%m-%d %H:%M:%S %Z' | strftime(ansible_date_time.epoch) }}
#
apiVersion: v1
kind: Secret
metadata:
  name: {{ cilium_shared_ca_secret_name }}
  namespace: {{ cilium_shared_ca_secret_namespace }}
{% if cilium_shared_ca_secret_labels %}
  labels:
{% for key, value in cilium_shared_ca_secret_labels.items() | sort %}
    {{ key }}: {{ value }}
{% endfor %}
{% endif %}
{% if cilium_shared_ca_secret_annotations %}
  annotations:
{% for key, value in cilium_shared_ca_secret_annotations.items() | sort %}
    {{ key }}: {{ value }}
{% endfor %}
{% endif %}
type: {{ cilium_shared_ca_secret_type }}
data:
  {{ cilium_shared_ca_secret_cert_key }}: {{ cert_b64 }}
  {{ cilium_shared_ca_secret_key_key }}: {{ key_b64 }}
