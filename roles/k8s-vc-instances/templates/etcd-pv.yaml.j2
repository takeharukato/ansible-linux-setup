#
#  PersistentVolume 作成テンプレート (etcd 用)
#
#  vcinstances_etcd_storage_enabled: true の場合に、各テナントの etcd 用 PV を作成する。
#  local-storage を使用し、ワーカーノード上の指定パスをマウントする。
#
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ item.pv_name }}
  labels:
    type: local
    tenant: {{ item.tenant_name }}
spec:
  storageClassName: {{ _sc_name_to_create }}
  capacity:
    storage: {{ vcinstances_etcd_storage_size }}
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Delete
  local:
    path: {{ item.host_path }}
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ item.node_name }}
