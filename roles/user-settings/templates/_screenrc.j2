#ベルを鳴らさない
bell ""
#エスケープキーをCtrl-zに変更
#emacsでCtrl-aを使用するため
#
escape ^z^z

# スタートアップメッセージを表示しない
startup_message off
# ビジュアルベルを停止
vbell off
# SSHなどの接続が切れた場合に自動デタッチしてシェルが終了されないようにする
autodetach on
# UTF-8を端末文字に使用
encoding utf8

# background color eraseをオフ
defbce "off"

# 256色対応を有効にする
term xterm-256color
termcapinfo  xterm-256color 'hs@:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l\E[?1;4;6l'
termcapinfo  xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

# ncursesの表示(枠線)が崩れないようにする
cjkwidth off

# ステータス行の設定
hardstatus alwayslastline "%-w%{= yk}%n %t%{-}%+w"

#
#キーバインド
#
# Ctrl-z Ctrl-U 端末文字にUTF-8を使用
bind ^U encoding utf8
# Ctrl-z Ctrl-E 端末文字にEUCを使用
bind ^E encoding euc
# Ctrl-z Ctrl-t ウィンドウタイトル名を変更
bind ^t title
# Ctrl-z Ctrl-x を無効化(emacsでCtrl-xを使用するため)
bind ^x
