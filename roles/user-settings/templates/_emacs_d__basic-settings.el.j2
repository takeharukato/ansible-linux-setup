;;
;; 基本設定
;;

;; ロードパスの設定
(push (expand-file-name "~/elisp") load-path)

;; 行末の空白を削除する
(add-hook 'before-save-hook 'delete-trailing-whitespace)

;;
;; キーバインド
;;
(global-set-key "\C-h" 'delete-backward-char) ;; BSで一つ前の文字を削除
(global-set-key "\C-\\" 'undo)                ;; Ctrl+\でアンドゥ
(global-unset-key "\M-`")        ;; Meta+`を無効化(ALT+`が日本語入力になるため)
(global-unset-key "\C-j")        ;; Ctrl+jを無効化 (改行なので)

;;
;; アップケースリージョン/ダウンケースリージョンを無効化
;;
(put 'downcase-region 'disabled nil)
(put 'upcase-region 'disabled nil)
