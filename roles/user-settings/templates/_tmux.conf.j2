# Bind escape key to C-z
unbind-key -n C-a
unbind-key -n C-b
set -g prefix C-z
bind-key C-z send-prefix

# Disable left and right side information at status bar.
set -g status-left ''
set -g status-right ''

set-option -g status-bg "black"
set-option -g status-fg "white"
set-window-option -g window-status-format "#I:#W#F"
set-window-option -g window-status-current-format "#[fg=colour0,bg=colour185,bold] #I:#W#F"
bind C-c run "tmux new-window || true"
bind C-p run "tmux previous-window || true"
bind C-n run "tmux next-window || true"
bind d run "tmux detach-client || true"
unbind t
bind t command-prompt -I "#W" "rename-window '%%'"

