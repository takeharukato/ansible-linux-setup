$TTL 86400
@       IN      SOA     {{ dns_server|default('', true) }}. root.{{ dns_domain|default('', true) }}. (
        {{ bind_serial|default('', true) }} ;Serial
        3600            ;Refresh
        1800            ;Retry
        604800          ;Expire
        86400           ;Minimum TTL
)

