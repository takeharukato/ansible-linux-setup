[Unit]
Description=Preempt rpfilter drops by accepting return traffic before firewalld
Wants=firewalld.service
After=firewalld.service

[Service]
Type=oneshot
RemainAfterExit=yes
# 起動時, 再読み込み時ともに毎回適用 (firewalld の規則再生成に先行)
ExecStart=/usr/local/sbin/rpfilter-bypass-ensure.sh
ExecReload=/usr/local/sbin/rpfilter-bypass-ensure.sh

[Install]
WantedBy=multi-user.target